<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/img/favicon.png') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
       <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    </head>
    <body>
        <header>
            <img id="logo" src="{{ asset('assets/img/logo.png') }}">
            <h2 class="mt-3">Bucket List !</h2>
            <nav class="d-flex align-content-center">
                <ul class="mt-3">
                    <li class="me-4"><a href="{{ path('main_home') }}">Accueil</a></li>
                    <li class="me-4"><a href="{{ path('main_about') }}">A propos</a></li>
                    <li class="me-4"><a href="{{ path('wish_list') }}">Liste</a></li>
                    <li class="me-4"><a href="{{ path('wish_add') }}">Ajouter</a></li>
                    <li class="me-4"><a class="bg-danger" href="{{ path('wish_addOld') }}">Ajouter(ancien)</a></li>
                    <li class="me-4"><a class="bg-danger" href="{{ path('main_roadToDQL') }}">DQL</a></li>
                </ul>
            </nav>
        </header>

        <div class="content">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ label }} mt-3">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>{{message}}</strong>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer>
                <p>&copy Bucket-List - 2023</p>
        </footer>
        <script src="{{ asset('assets/js/main.js') }}"></script>
    </body>
</html>
